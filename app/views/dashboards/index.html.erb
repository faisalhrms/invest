            // Send the AJAX request to reset the rank flag
            $.ajax({
                url: "<%= reset_rank_flag_users_path %>",
                method: 'POST',
                headers: {
                    'X-CSRF-Token': csrfToken // Include the CSRF token
                },
                success: function() {
                    console.log("Rank flag reset successfully.");
                },
                error: function(xhr, status, error) {
                    console.error("Failed to reset rank flag:", status, error);
                }
            });
        }
    });
</script>




