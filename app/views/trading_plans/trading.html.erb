<div class="container-fluid">
  <div class="col-lg-12">
    <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
      <div class="iq-card-header d-flex justify-content-between">

        <div class="iq-header-title">
          <h4 class="card-title">Trading Plan Details</h4>
        </div>

      </div>
      <div class="iq-card-body">
        <div class="table-responsive">
          <table id="datatable" class="table mb-0 mt-2 table-borderless">
            <thead>
            <tr>
              <th>User Name</th>
              <th>Email</th>
              <th>Deposit Amount</th>
              <th>Status</th>
              <th>Purchase Date</th>
            </tr>
            </thead>
            <% if @trading_purchases.present? %>
              <tbody>
              <% @trading_purchases.each do |purchase| %>
                <tr>
                  <td><%= purchase.user.full_name %></td>
                  <td><%= purchase.user.email %></td>
                  <td>$<%= purchase.deposit_amount %></td>
                  <td><%= purchase.status.humanize %></td>
                  <td><%= purchase.created_at.strftime("%d %B, %Y") %></td>
                </tr>
              <% end %>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
