<%= form_with model: bank_account, url: update_bank_account_path, method: :post, multipart: true do |form| %>
  <input hidden type="text" name="id" value="<%= bank_account.id %>">
  <div class="modal fade" id="editModal<%= bank_account.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Account</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="iq-card-body">
          <div class="row">


            <div class="col-md-6">
              <div class="form-group">
                <label for="account_name<%= bank_account.id %>">Account Name <span style="color: red">*</span></label>
                <input type="text" class="form-control" id="account_name<%= bank_account.id %>" value="<%= bank_account.account_name %>" name="account_name" placeholder="Enter Account Name">
              </div>
            </div>

            <div class=" col-md-6">
              <div class="form-group">
                <label for="account_number<%= bank_account.id %>">NETWORK <span style="color: red">*</span></label>
                <input type="text" class="form-control" id="account_number<%= bank_account.id %>" value="<%= bank_account.account_number %>" name="account_number" placeholder="Enter NETWORK">
              </div>
            </div>


            <div class="col-md-6">
              <div class="form-group">
                <label for="bank_name<%= bank_account.id %>">WALLET ADDRESS <span style="color: red">*</span></label>
                <input type="text" class="form-control" id="bank_name<%= bank_account.id %>" <%= bank_account.bank_name %> name="bank_name" placeholder="Enter WALLET ADDRESS">
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="iban<%= bank_account.id %>">IMPORTANT NOTE <span style="color: red">*</span></label>
                <input type="text" class="form-control" id="iban<%= bank_account.id %>" <%= bank_account.iban %> name="iban" placeholder="Enter IMPORTANT NOTE">
              </div>
            </div>


            <div class="col-md-6 mt-2">
              <div class="form-group">
                <div class="custom-control custom-switch custom-control-inline">
                  <input type="checkbox" class="custom-control-input" name="is_active" id="ActiveEdit<%= bank_account.id %>" <%= 'checked' if bank_account.is_active %>>
                  <label class="custom-control-label" for="ActiveEdit<%= bank_account.id %>">Inactive / active</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
